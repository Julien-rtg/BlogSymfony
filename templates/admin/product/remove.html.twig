{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1> Supprimer le produit : {{ product.name }}</h1>

        {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col">
                    {{ form_widget(form) }}
                </div>
            </div>

            <button type="submit" class="btn btn-danger">Delete Product</button>

        {{ form_end(form) }}
    </div>

{% endblock %}