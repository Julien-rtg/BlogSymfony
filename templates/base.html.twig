<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Le Petit Français{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/styles/bootstrap.min.css">
        <link rel="stylesheet" href="/styles/app.css">
        <link rel="stylesheet" href="/styles/genericClass.css">

        {# {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %} #}

    </head>
    <body>
        {% block header %}
            <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-secondary">
                <div class="container-fluid mainNavDiv">
                    <div class="navDiv">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                   
                    <div class="navDivTitle navDiv">
                        <ul class="navbar-nav">
                            <li class="nav-item pe-3">
                                <a class="nav-link" href="{{ path('homepage') }}"><span class="firstW">Le</span> <span class="text-white">Petit</span> <span class="thirdW">Français</span></a>
                            </li>
                        </ul>
                    </div>

                    <div class="navDivCart navDiv">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link " href="{{ path('cart') }}"><img src="/img/cart.png" alt=""></a>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="collapse navbar-collapse navNav" id="navbarColor01">
                        <ul class="navbar-nav">
                            <li class="nav-item nav-item-center navItemOrder1">
                                <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                            </li>
                            <li class="nav-item nav-item-center navItemOrder2">
                                <a class="nav-link " href="{{ path('app_login') }}">My Account</a>
                            </li>
                            <li class="nav-item nav-item-center navItemOrder3">
                                <a class="nav-link " href="{{ path('about') }}">About</a>
                            </li>
                            <li class="nav-item nav-item-center navItemOrder4">
                                {% if app.user.roles is defined %}
                                    {% for role in app.user.roles %}
                                        {% if role == "ROLE_ADMIN" %}
                                            <a class="nav-link" href="{{ path('home_admin') }}">Admin</a>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </li>
                            <li class="nav-item nav-item-center navItemOrder5">
                                {% if app.user %}
                                    <a class="nav-link" href="{{ path('app_logout') }}"><img src="/img/off.png" alt=""></a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                
                </div>
            </nav>

            {% for label, messages in app.flashes %}
                <div class="container">
                    <div class="alert alert-{{label}}">
                        {% for message in messages %}
                            <p class="text-center">{{ message | raw }}</p>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        {% endblock %}

        {% block body %}{% endblock %}
        

        {% block footer %}

            <footer class="text-center text-white bg-light">
                <div class="container p-4 pb-0">
                    <section class="mb-4">
                        <!-- Facebook -->
                        <a href="#" class="m-2"><img src="/img/facebook.png" alt=""></a>

                        <!-- Instagram -->
                        <a href="" class="m-2"><img src="/img/instagram.png" alt=""></a>
                    </section>
                </div>

                {# <div class="d-flex justify-content-center mb-5">
                    <div class="mapouter">
                        <div class="gmap_canvas">
                            <iframe width="500" height="400" id="gmap_canvas" 
                                src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" 
                                scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com"></a><br>
                        </div>
                    </div>
                </div> #}

                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    © 2020 Copyright:
                    <a class="text-white" href="{{ path('homepage') }}">LPF.com</a>
                </div>
            </footer>
        
        {% endblock %}

        {# {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %} #}
        
        <script src="/jsDev/bootstrap.bundle.min.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="sweetalert2.all.min.js"></script>

        <script src="/jsDev/app.js"></script>
        <script src="/jsDev/filter.js"></script>

    </body>
</html>
