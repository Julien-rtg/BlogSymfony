<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}LPF{% endblock %}</title>

        <link rel="stylesheet" href="/styles/app.css">
        <link rel="stylesheet" href="/styles/bootstrap.min.css">

        {# {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %} #}

    </head>
    <body>
        {% block header %}
            <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav m-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('homepage') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{  path('card') }}">Card</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('account') }}">My account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('about') }}">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
        
        {# {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %} #}
        
        <script src="/jsDev/bootstrap.bundle.min.js"></script>
    </body>
</html>
