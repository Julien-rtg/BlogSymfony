<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}LPF{% endblock %}</title>

        <link rel="stylesheet" href="/styles/app.css">
        <link rel="stylesheet" href="/styles/bootstrap.min.css">

        {# {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %} #}

    </head>
    <body>
        {% block header %}
            <nav class="navbar sticky-top navbar-expand-lg">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse " id="navbarColor01">
                        <ul class="navbar-nav m-auto ">
                            <li class="nav-item">
                                <a class="nav-link active text-white" href="{{ path('homepage') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{  path('card') }}">Card</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('account') }}">My account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('about') }}">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
        

        {% block footer %}

            <footer class="text-center text-white">
                <div class="container p-4 pb-0">
                    <section class="mb-4">
                        <!-- Facebook -->
                        <a href="#" class="m-2"><img src="/img/facebook.png" alt=""></a>

                        <!-- Instagram -->
                        <a href="" class="m-2"><img src="/img/instagram.png" alt=""></a>
                    </section>
                </div>

                <div class="d-flex justify-content-center mb-5">
                    <div class="mapouter">
                        <div class="gmap_canvas">
                            <iframe width="500" height="400" id="gmap_canvas" 
                                src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" 
                                scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com"></a><br>
                        </div>
                    </div>
                </div>

                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    Â© 2020 Copyright:
                    <a class="text-white" href="{{ path('homepage') }}">LPF.com</a>
                </div>
            </footer>
        
        {% endblock %}

        {# {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %} #}
        
        <script src="/jsDev/bootstrap.bundle.min.js"></script>
    </body>
</html>
