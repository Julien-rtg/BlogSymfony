<div class="showCard text-center">
    <h3 class="mb-5">Your card</h3>
    <hr>
    {% for item in items %}
        <div class="itemCard col-sm mb-3">
            <p class="boldProductName">{{ item.product.name }}</p>
            <div class="quantity-cart-home mb-3">
                <div class="icon-cart me-2">
                    <a class="tokenImg aCard" href="{{ path('add_cart', {id : item.product.id}) }}"><img src="/img/plus.png" alt=""></a>
                </div>
                <div class="icon-cart">
                    {{ item.quantity }}
                </div>
                <div class="icon-cart ms-2">
                    <a class="tokenImg aCard" href="{{ path('remove_cart', {id : item.product.id}) }}"><img src="/img/minus.png" alt=""></a>
                </div>
            </div>

            <p> Price : {{ item.product.price * item.quantity}} $
            <a class="m-1 aCard" href="{{ path('delete_cart', {'id': item.product.id}) }}"><img src="\img\delete.png" alt=""></a>
            </p>
        </div>
        <hr>
    {% endfor %}
    <div class="col-sm mb-3">
        <h5>Total of card : </h5>
        <h4>{{ total | number_format(2, '.', ',') }} $</h4>
    </div>
    <a href="{{ path('order_index') }}" class="btn btn-primary order">Order</a>
</div>
