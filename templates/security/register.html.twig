{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">

        <div class="form-group">
            <h1 class="h3 mb-3 font-weight-normal mb-5 text-center">Register</h1>

            {{ form_start(registrationForm) }}
            
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.firstName, {attr : {'placeholder' : 'First Name *'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.lastName, {attr : {'placeholder' : 'Last Name *'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.email, {attr : {'placeholder' : 'Email *'}}) }}
                    {{ form_errors(registrationForm.email )}}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.Phone, {attr : {'placeholder' : 'Phone (Used for delivery)'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.Address, {attr : {'placeholder' : 'Address (Used for delivery)'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.plainPassword.first, {attr : {'placeholder' : 'Password *'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.plainPassword.second, {attr : {'placeholder' : 'Repeat Password *'}}) }}
                </div>
                

                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-success mt-3">Register</button>

            {{ form_end(registrationForm) }}

        </div>

       

    </div>
        
{% endblock %}
