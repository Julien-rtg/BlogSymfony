{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        <h1 class="text-center mb-5">Account of {{app.user.firstName}} {{app.user.lastName}} </h1>

        {{form_start(form)}}

            <div class="row">
                <div class="col">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_label(form.lastName) }}
                    {{ form_widget(form.lastName) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Modify</button>
        {{form_end(form)}}

    </div>

{% endblock %}
