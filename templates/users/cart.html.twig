{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        
        {% if items | length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td>{{ item.product.price }}</td>
                            <td>
                                <a href="{{ path('add_cart', {'id': item.product.id}) }}"><img src="img\plus.png" class="m-1"></a>
                                <p>{{ item.quantity }} </p>
                                <a href="{{ path('remove_cart', {'id': item.product.id}) }}"><img src="img\minus.png" class="m-1"></a>
                            </td>
                            <td>{{ item.product.price * item.quantity }}</td>
                            <td>
                                <a href="{{ path('delete_cart', {'id': item.product.id}) }}"><img src="img\delete.png" alt="" class="m-1"></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">Total :</td>
                        <td>{{ total }}</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

        {% else %}
            <h1>Empty bag</h1>
        {% endif %}

    </div>
{% endblock %}