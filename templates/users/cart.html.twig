{% extends 'base.html.twig' %}

{% block body %}

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('add_cart', {'id': item.product.id}) }}" class="btn btn-success btn-sm">Add</a>
                            <a href="{{ path('remove_cart', {'id': item.product.id}) }}" class="btn btn-warning btn-sm">Remove</a>
                            <a href="{{ path('delete_cart', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total :</td>
                    <td>{{ total }}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

    {% else %}
        <h1>Votre panier est vide</h1>
    {% endif %}

{% endblock %}