{% extends 'base.html.twig' %}
{% block body %}


    <div class="container containerOfPage">

        <div class="topContainer text-center">
            <div class="mt-5 logoTop">
                <img src="https://via.placeholder.com/250x250" alt="" style="border-radius : 50%">
            </div>

            <div class="jumbotron jumbotron-fluid mt-5">
                <h1 class="display-4">Page Home</h1>
                <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
                <hr class="my-5">
            </div>
        </div>
        
        <div class="mainContainer row">
            <div class="mainContainerLeft col-md-8">
                <div class="row">
                    {% for product in products %}
                        <div class="col-md-4">
                            <div class="card bg-light mb-3">
                                <div class="card-header text-center">
                                    {{product.name}}
                                </div>

                                <img src="{{product.image}}" alt="">
                                <div class="card-body text-center">
                                    {{product.description}} <br>
                                    
                                </div>
                                <div class="card-footer">
                                    <a href="{{ path('add_cart', { 'id' : product.id}) }}" class="btn btn-success">Add to cart</a>
                                    {{product.price}} â‚¬
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="mainContainerRight col-md-4">
                <div class="showCategory text-center column">
                    <div class="col-sm mb-3">
                        <a href="{{ path('homepage') }}">All products</a>
                    </div>
                    {% for category in categories %}
                        <div class="col-sm mb-3">
                            <a href="{{ path('show_category', { 'slug' : category.name } ) }}">{{ category.name }}</a>
                        </div>
                    {% endfor %}
                </div>
                <div class="showCard text-center">
                
                    {% for item in items %}
                        <div class="itemCard col-sm mb-3">
                            <p>{{ item.product.name }}</p>
                            <a href="{{ path('remove_cart', {'id': item.product.id}) }}"><img src="img\minus.png" class="m-1"></a>
                            <p> x {{ item.quantity }} </p>
                            <a href="{{ path('add_cart', {'id': item.product.id}) }}"><img src="img\plus.png" class="m-1"></a>
                            <p>{{ item.product.price * item.quantity}} $</p>
                            <a href="{{ path('delete_cart', {'id': item.product.id}) }}"><img src="img\delete.png" alt="" class="m-1"></a>
                        </div>
                    {% endfor %}
                    <div class="col-sm mb-3">
                        <h5>Total of card : </h5>
                        <h4>{{ total | number_format(2, '.', ',')}} $</h4>
                    </div>
                </div>
            </div>
        </div>

    </div>



{% endblock %}
