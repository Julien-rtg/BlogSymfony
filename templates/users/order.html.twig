{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <p class="text-muted">Progress bar</p>
        <div class="progress mb-5">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <h1 class="mb-5 text-center">Delivery Details</h1>

            <form action="" method="POST">
                <div class="form-group row mb-5">
                    <div class="col-md-6 formIconOrder">
                        <img src="/img/car.png" class="tokenImg me-3">
                        <div class="form-floating formOrder">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Delivery Address">
                            <label for="floatingInput">Delivery Address</label>
                        </div>
                    </div>
                    <div class="col-md-6 formIconOrder">
                        <img src="/img/phone.png" class="tokenImg me-3">
                        <div class="form-floating formOrder">
                            <input type="text" class="form-control" id="floatingPhone" placeholder="Phone">
                            <label for="floatingPhone">Phone</label>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success" type="submit">Submit</button>
            </form>

    </div>

{% endblock %}